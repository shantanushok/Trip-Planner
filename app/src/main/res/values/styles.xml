<resources>
    <style name="Playful" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- You can override general text appearances, button colors, etc. here if needed -->
    </style>
<!-- res/values/styles.xml -->
    <style name="Playful.Headline">

        <item name="android:textSize">24sp</item>

        <item name="android:textStyle">bold</item>

        <item name="android:textColor">@color/teal_700</item>
    </style>

    <!-- res/values/styles.xml -->

    <style name="Playful.EditText">

        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">wrap_content</item>

        <item name="android:padding">12dp</item>

        <item name="android:background">@drawable/bg_edittext</item>

        <item name="android:textColor">@color/text_dark</item>

        <item name="android:textSize">16sp</item>

    </style>

    <!-- res/values/styles.xml -->

    <style name="Playful.Button">

        <item name="android:background">@drawable/bg_button_teal</item>

        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">16sp</item>

        <item name="android:padding">16dp</item>

    </style>

    <!-- res/values/styles.xml -->

    <style name="Playful.Title">

        <item name="android:textSize">26sp</item>

        <item name="android:textStyle">bold</item>

        <item name="android:textColor">@color/teal_700</item>

    </style>

    <!-- res/values/styles.xml -->

    <style name="Playful.Body">

        <item name="android:textSize">16sp</item>

        <item name="android:textColor">@color/text_dark</item>

    </style>

</resources>